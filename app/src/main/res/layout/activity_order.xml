<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nickpellegrino.smartcoffee.OrderActivity">


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/coffeeRadioGroup"
        android:layout_alignStart="@+id/minusSugarButton">

        <RadioButton
            android:text="Morning Blend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/morningBlendRadioButton"
            android:layout_weight="1" />

        <RadioButton
            android:text="Hazelnut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hazelnutBlendRadioButton"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Coffee Selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/coffeeRadioGroup" />

    <TextView
        android:text="Sugars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/minusSugarButton"
        android:textSize="20dp"
        android:id="@+id/textView8" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusSugarButton"
        android:layout_below="@+id/coffeeRadioGroup"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="0"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/plusSugarButton"
        android:id="@+id/sugarCountTextView"
        android:layout_alignBottom="@+id/plusSugarButton"
        android:layout_alignTop="@+id/plusSugarButton"
        android:gravity="center"
        />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_toStartOf="@+id/sugarCountTextView"
        android:id="@+id/minusSugarButton" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plusSugarButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/plusCreamButton" />

    <TextView
        android:text="0"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/plusCreamButton"
        android:layout_alignTop="@+id/plusCreamButton"
        android:layout_toStartOf="@+id/plusCreamButton"
        android:gravity="center"
        android:id="@+id/creamCountTextView" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minusSugarButton"
        android:layout_toStartOf="@+id/creamCountTextView"
        android:id="@+id/minusCreamButton" />

    <TextView
        android:text="Creams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/minusCreamButton"
        android:layout_alignParentStart="true"
        android:id="@+id/textView12"
        android:layout_alignEnd="@+id/textView7" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plusCreamButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/sizeRadioGroup"
        android:layout_alignStart="@+id/minusCreamButton">

        <RadioButton
            android:text="Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/smallRadioButton"
            android:layout_weight="1" />

        <RadioButton
            android:text="Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mediumRadioButton"
            android:layout_weight="1" />

        <RadioButton
            android:text="Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/largeRadioButton"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:text="Order!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/submitOrderButton" />

    <TextView
        android:text="Room Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/sizeRadioGroup"
        android:layout_alignEnd="@+id/textView12"
        android:layout_alignParentStart="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submitOrderButton"
        android:layout_below="@+id/sizeRadioGroup"
        android:layout_alignParentRight="true"
        android:id="@+id/roomNumberPicker" />

</RelativeLayout>
